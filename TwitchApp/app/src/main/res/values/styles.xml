<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_streamer_info">
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="text_settings">
        <item name="android:layout_marginEnd">
            @dimen/settings_text_right_margin
        </item>
        <item name="android:layout_marginRight">@dimen/settings_text_right_margin</item>
        <item name="android:layout_marginStart" >
            @dimen/settings_text_left_margin
        </item>
        <item name="android:layout_marginLeft">@dimen/settings_text_left_margin</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="settings_header_style" parent="text_settings">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_header_height</item>
    </style>

    <style name="text_body_light">
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:textSize">@dimen/font_body_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="stream_settings_item">
    <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAppearance">@style/text_settings_title</item>
</style>

    <style name="text_settings_title">
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textSize">@dimen/font_settings_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>



    </resources>
